<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTextStyle">
<!--        <item name="android:fontFamily">@font/pixeled</item>-->
<!--        <item name="android:textAllCaps">true</item>-->
    </style>

    <style name="DefaultTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="SecondTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/second_text</item>
        <item name="android:textSize">@dimen/second_text_size</item>
    </style>
</resources>